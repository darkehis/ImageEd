<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jonathan.imageed.MainActivity"
    android:background="#000000">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#3B3B3B"
        android:elevation="4dp"
        android:theme="@style/CustomActionBar"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/lay_img"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    </FrameLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lay_img"
        android:minHeight="100dp"
        android:layout_marginTop="-50dp"
        android:scrollbarAlwaysDrawHorizontalTrack="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_mode_edit_black_24dp"
                android:id="@+id/bout_modif"
                android:layout_weight="1"
                android:alpha="0.7" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_grid_on_black_24dp"
                android:id="@+id/bout_mat"
                android:layout_weight="1"
                android:alpha="0.7" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_undo_black_24dp"
                android:id="@+id/bout_ann"
                android:layout_weight="1"
                android:alpha="0.7" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_redo_black_24dp"
                android:id="@+id/bout_rest"
                android:layout_weight="1"
                android:alpha="0.7" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_restore_black_24dp"
                android:id="@+id/bout_origine"
                android:layout_weight="1"
                android:alpha="0.7" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_photo_camera_black_24dp"
                android:id="@+id/bout_photo"
                android:layout_weight="1"
                android:alpha="0.7" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_insert_photo_black_24dp"
                android:id="@+id/bout_gal"
                android:layout_weight="1"
                android:alpha="0.7" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_save_black_24dp"
                android:id="@+id/bout_sauv"
                android:layout_weight="1"
                android:alpha="0.7" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_exit_to_app_black_24dp"
                android:id="@+id/bout_quitter"
                android:layout_weight="1"
                android:alpha="0.7" />

        </LinearLayout>
    </HorizontalScrollView>


</RelativeLayout>